        <item name="android:background">@drawable/btn_reload</item>
        <item name="android:text">@string/noInternetReload</item>
    </style>

    <style name="dont_horizontal">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
