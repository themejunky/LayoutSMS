    </style>

    <style name="noInternet_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_nointernet</item>
    </style>

    <style name="noInternet_text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/noInternet_view_margin_top</item>
        <item name="android:textSize">@dimen/noInternet_text_size_normal</item>
    </style>

    <style name="noInternet_text_big" parent="noInternet_text_normal">
        <item name="android:textSize">@dimen/noInternet_text_size_big</item>
    </style>

    <style name="noInternet_btn_reload">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/noInternet_text_size_normal</item>
        <item name="android:paddingTop">@dimen/noInternet_button_padding_tb</item>
        <item name="android:paddingBottom">@dimen/noInternet_button_padding_tb</item>
        <item name="android:paddingLeft">@dimen/noInternet_button_padding_lr</item>
