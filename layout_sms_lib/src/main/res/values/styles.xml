<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

        <style name="AppTheme.Transparent" parent="AppTheme">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowContentOverlay">@null</item>

        </style>


    <style name="relative_container_sms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="relative_container_sms_moreApps">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="relative_container_kplus_rate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
      <!--  <item name="android:background">@drawable/bg_rate_kplus</item>-->
    </style>

    <style name="relative_container_gravity_center_kplus" parent="relative_container_kplus_rate">
        <item name="android:gravity">center</item>
    </style>


    <style name="Home_carousel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_carousel_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/home_carouse_bg</item>
    </style>

    <style name="Home_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_buttons_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/background_splash</item>
        <item name="android:textSize">@dimen/home_buttons_text_size</item>
        <item name="android:layout_marginBottom">@dimen/home_buttons_margin_bottom</item>
    </style>

    <style name="Home_container_buttons">
        <item name="android:layout_marginLeft">@dimen/home_container_buttons_margin</item>
        <item name="android:layout_marginRight">@dimen/home_container_buttons_margin</item>
        <item name="android:layout_marginTop">@dimen/home_container_buttons_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="loading_text_normal">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/loading_text_size</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="loading_text_normal_kplus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/loading_text_size</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="loading_text_bold" parent="loading_text_normal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loading_text_bold_kplus" parent="loading_text_normal">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/loading_text_grey</item>
    </style>

    <style name="loading_text_bold_electric" parent="loading_text_normal">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/background_splash</item>
    </style>

    <style name="loading_text_small" parent="loading_text_normal">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="loading_text_small_kplus" parent="loading_text_normal">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="loading_text_small_electric" parent="loading_text_normal">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="loading_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/loading_padding</item>
    </style>



    <style name="loading_animation_image">
        <item name="android:layout_width">@dimen/loading_animation_size</item>
        <item name="android:layout_height">@dimen/loading_animation_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/loading_animation_padding</item>
    </style>


    <style name="ListingCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listing_image_height</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="downloadContainerButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>



    <style name="downloadCancel">
          <item name="android:layout_width">wrap_content</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:text">@string/download_cancel</item>
          <item name="android:layout_gravity">center</item>
          <item name="android:textColor">#e4c3ff</item>
    </style>

    <style name="downloadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="downloadText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/download_it_from_google_play</item>
